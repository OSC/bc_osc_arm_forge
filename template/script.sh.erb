#!/usr/bin/env bash

<%- gpu = context.node_type.include?("vis") -%>

# Clean the environment
module purge

# Set working directory to home directory
cd "${HOME}"

#
# Launch Xfce Window Manager and Panel
#

(
  export SEND_256_COLORS_TO_REMOTE=1
  export XDG_CONFIG_HOME="<%= session.staged_root.join("config") %>"
  export XDG_DATA_HOME="<%= session.staged_root.join("share") %>"
  export XDG_CACHE_HOME="$(mktemp -d)"
  module restore
  set -x
  xfwm4 --compositor=off --daemon --sm-client-disable
  xsetroot -solid "#D3D3D3"
  xfsettingsd --sm-client-disable
  xfce4-panel --sm-client-disable
) &

#
# Start ARM DDT || MAP
#

# Load the required environment
module load intel/18.0.2
module load mvapich2/2.3
module load <%= context.version %>

# Launch ddt

<% if context.version.include? 'ddt' %>
  <% if context.MPI_option.eql? "non MPI program" %>
	  ddt --no-mpi <%= context.program_name %>
	<% else %>
    ddt -np <%= context.num_of_nodes.to_i*context.num_cores.to_i %> <%= context.program_name %>
  <% end %>
<% else %>
	<% if context.MPI_option.eql? "non MPI program" %>
	  map --no-mpi <%= context.program_name %>
	<% else %>
    map -np <%= context.num_of_nodes.to_i*context.num_cores.to_i %> <%= context.program_name %>
  <% end %>
<% end %>

